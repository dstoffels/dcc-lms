{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Django",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}\\api\\manage.py",
			"args": ["runserver"],
			"django": true,
			"justMyCode": true
		},
		{
			"name": "Next.js: debug server-side",
			"type": "node-terminal",
			"request": "launch",
			"command": "npm run dev",
			"cwd": "${workspaceFolder}/frontend"
		},
		{
			"name": "Next.js: debug client-side",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000",
			"cwd": "${workspaceFolder}/frontend"
		},
		{
			"name": "Next.js: debug full stack",
			"type": "node-terminal",
			"request": "launch",
			"command": "npm run dev",
			"serverReadyAction": {
				"pattern": "- Local:.+(https?://.+)",
				"uriFormat": "%s"
				// "action": "debugWithBrave"
			},
			"cwd": "${workspaceFolder}/frontend",
			"skipFiles": ["<node_internals>/**", "${workspaceFolder}/frontend/node_modules/**"]
		}
	],
	"compounds": [
		{
			"name": "Full Stack",
			"configurations": ["Python: Django", "Next.js: debug server-side"]
		}
	]
}
